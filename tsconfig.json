{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": ["@types/styled-components-react-native"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@theme/*": ["./src/theme/*"],
      "@ui/*": ["./src/ui/*"],
      "@lib/*": ["./src/lib/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
